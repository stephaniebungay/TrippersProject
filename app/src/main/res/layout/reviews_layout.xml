<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_16sdp"

    >


    <ImageView
        android:id="@+id/reviewerpfp"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:src="@drawable/profilepicture"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/reviewername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toEndOf="@+id/reviewerpfp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Name"/>
    <RatingBar
        android:id="@+id/reviewerrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/stars"
        android:secondaryProgressTint="@color/stars"
        style="@style/Widget.AppCompat.RatingBar.Small"
        app:layout_constraintStart_toEndOf="@+id/reviewername"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <com.example.trippersapp.Extra.TextViewEx
        android:id="@+id/reviewercomment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="henlo"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/poppins_italic"
        android:layout_marginStart="@dimen/_45sdp"
        app:layout_constraintStart_toEndOf="@id/reviewerpfp"
        app:layout_constraintTop_toBottomOf="@id/reviewername"/>

    <TextView
        android:id="@+id/reviewdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-1"
        android:textSize="@dimen/_9ssp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrippersApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorThemeRed</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Widget.MaterialComponents.Button.TextButton.Icon"></style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="InvalidBoxError" parent="TextAppearance.Design.Error">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="subtitleCentered">true</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:height">@dimen/_33sdp</item>
        <item name="backgroundTint">@color/PrimaryButtonColor</item>
        <item name="elevation">@dimen/_8sdp</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="FacebookButton">
        <item name="android:height">@dimen/_33sdp</item>
        <item name="backgroundTint">@color/facebook</item>
        <item name="elevation">@dimen/_8sdp</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="GoogleButton">
        <item name="android:height">@dimen/_33sdp</item>
        <item name="backgroundTint">@color/google</item>
        <item name="elevation">@dimen/_8sdp</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="UploadButton">
        <item name="backgroundTint">@color/offwhite</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="CancelButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">@dimen/_33sdp</item>
        <item name="cornerRadius">5dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">@dimen/_8sdp</item>
    </style>

    <style name="SaveButton">
        <item name="android:height">@dimen/_33sdp</item>
        <item name="backgroundTint">@color/com_facebook_blue</item>
        <item name="elevation">@dimen/_8sdp</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="TabButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textcolor</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="TabInactiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textcolor</item>
        <item name="rippleColor">@color/accent</item>
    </style>


</resources>

